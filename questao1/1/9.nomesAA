# Programa que filtra nomes que começam com a letra 'A'

quantidade = int(input("Quantos nomes você vai digitar? "))

nomes = []

for i in range(quantidade):
    nome = input(f"Digite o {i+1}º nome: ")
    nomes.append(nome)

nomes_com_a = []
for nome in nomes:
    if nome.upper().startswith('A'):
        nomes_com_a.append(nome)

print("Nomes que começam com a letra 'A':", nomes_com_a)
