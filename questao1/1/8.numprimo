# Programa que verifica se um número é primo

n = int(input("Digite um número inteiro positivo: "))
if n <= 1:
    print(f"{n} não é primo.")
else:
    eh_primo = True 

    for i in range(2, n):
        if n % i == 0:
            eh_primo = False
            break 

    
    if eh_primo:
        print(f"{n} é primo.")
    else:
        print(f"{n} não é primo.")
